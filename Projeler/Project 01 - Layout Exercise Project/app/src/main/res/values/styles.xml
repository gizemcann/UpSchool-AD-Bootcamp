<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EntryTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">@dimen/entry_title_text_size</item>
    </style>

    <style name="HomeSubTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="StartInputStyle">
        <item name="android:background">@drawable/ic_start_input_background</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textColorHint">#2C2B47</item>
    </style>

    <style name="PremimumPriceStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PremiumSubtitleStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="perStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>